- title t("Listing <%= plural_name %>")
- if @<%= plural_name %>.any?
  %table
    %tr
  <% for attribute in attributes -%>
      %th= t("<%= plural_name %>.<%= attribute.name %>")
  <% end -%>
      %th
      %th
      %th
  
    - @<%= plural_name %>.each do |<%= singular_name %>|
      %tr
  <% for attribute in attributes -%>
        %td= <%= singular_name %>.<%= attribute.name %>
  <% end -%>
        %td= link_to t('Show'), <%= singular_name %>
        %td= link_to t('Edit'), edit_<%= singular_name %>_path(<%= singular_name %>)
        %td= link_to t('Destroy'), <%= singular_name %>, :confirm => t('Are you sure'), :method => :delete
- else
  %h3= t("No <%= plural_name %>")

%br

= link_to t('New <%= singular_name %>'), new_<%= singular_name %>_path
