- title t("Index title", :scope => [:<%= plural_name %>])
<%- add_scaffold_translation("Index title: Listing #{plural_name}") -%>
<%- add_scaffold_translation("None found: No #{plural_name}") -%>
<%- add_scaffold_translation("New title: New #{singular_name}") -%>
<%- add_scaffold_translation("Show title: Showing #{singular_name}") -%>
<%- add_scaffold_translation("Edit title: Editing #{singular_name}") -%>
- if @<%= plural_name %>.any?
  %table.index-table
    %tr
<% for attribute in attributes -%>
<% add_scaffold_translation("#{attribute.human_name}: #{attribute.human_name}") -%>
      %th= t("<%= plural_name %>.<%= attribute.human_name %>")
<% end -%>
      %th
      %th
      %th
  
    - @<%= plural_name %>.each do |<%= singular_name %>|
      %tr<% link_created = false %>
<% for attribute in attributes -%>
<% if !link_created && %w{name title}.include?(attribute.name) -%>
        %td= link_to <%= singular_name %>.<%= attribute.name %>, <%= options[:namespace] ? "#{options[:namespace]}_" : '' %><%= singular_name %>_path(<%= singular_name %>)
<% link_created = true; else -%>
<% if attribute.field_type == :check_box -%>
        %td= boolean_text <%= singular_name %>.<%= attribute.name %>
<% else -%>
        %td= <%= singular_name %>.<%= attribute.name %>
<% end end end -%>
        %td= link_to edit_text, edit_<%= options[:namespace] ? "#{options[:namespace]}_" : '' %><%= singular_name %>_path(<%= singular_name %>)
        %td= link_to destroy_text, <%= options[:namespace] ? "[:#{options[:namespace]}, #{singular_name}]" : singular_name %>, :confirm => are_you_sure(@<%= singular_name %>), :method => :delete
- else
  %h3= t("None found", :scope => [:<%= plural_name %>])

%br

= link_to new_text(@<%= singular_name %>), new_<%= options[:namespace] ? "#{options[:namespace]}_" : '' %><%= singular_name %>_path
