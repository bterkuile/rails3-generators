- title t("Showing <%= singular_name %>")
<% for attribute in attributes -%>
.show_field
  %strong= t("<%= plural_name %>.<%= attribute.human_name %>")
  = @<%= singular_name %>.<%= attribute.name %>
<% end -%>

= link_to edit_text, edit_<%= options[:admin] ? 'admin_' : '' %><%= singular_name %>_path(@<%= singular_name %>)
\|
= link_to index_text, <%= options[:admin] ? 'admin_' : '' %><%= plural_name %>_path
