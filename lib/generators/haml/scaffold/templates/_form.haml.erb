- form_for <%= options[:namespace] ? "[:#{options[:namespace]}, @#{singular_name}]" : "@#{singular_name}" %> do |f|
  = render 'shared/error_messages', :target => @<%= singular_name %>

<% for attribute in attributes -%>
  .field
    = f.label :<%= attribute.name %>, t("<%= attribute.human_name %>", :scope => [:<%= plural_name %>])
    = f.<%= attribute.field_type %> :<%= attribute.name %>
<% end -%>
  .actions
    = f.submit @submit || update_button_text
