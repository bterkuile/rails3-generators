- form_for <%= options[:admin] ? "[:admin, @#{singular_name}]" : "@#{singular_name}" %> do |f|
  = render 'shared/error_messages', :target => @<%= singular_name %>

<% for attribute in attributes -%>
  .field
    = f.label :<%= attribute.name %>, t("<%= plural_name %>.<%= attribute.human_name %>")
    = f.<%= attribute.field_type %> :<%= attribute.name %>
<% end -%>
  .actions
    = f.submit @submit || update_button_text
